{
    "extends": "google",
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "node": true
    },
    "rules": {
        "require-jsdoc": "off",
        "max-len": ["error", { "code": 180 }]
    },
    "overrides": [
        {
            "files": ["dist/**/*.js"],
            "rules": {
                "no-invalid-this": "off",
                "camelcase": "off"
            }
        }
    ]
}
